<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="cn.edu.sustech.cs209.chatting.client.ChatController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Chat">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#createPrivateChat"
              text="New Private Chat"/>
            <MenuItem mnemonicParsing="false" onAction="#createGroupChat" text="New Group Chat"/>
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <SplitPane dividerPositions="0.25" focusTraversable="true" VBox.vgrow="ALWAYS">
      <items>
        <ListView fx:id="chatUserList" prefHeight="200.0" prefWidth="200.0" onMouseClicked="#handleUserListClick" />
        <SplitPane dividerPositions="0.7294938917975567" orientation="VERTICAL" prefHeight="200.0"
          prefWidth="160.0">
          <items>
            <ListView fx:id="chatContentList" prefHeight="412.0" prefWidth="670.0"/>
            <HBox prefHeight="178.0" prefWidth="670.0">
              <children>
                <TextArea fx:id="messageArea" prefHeight="157.0" prefWidth="624.0"
                  HBox.hgrow="ALWAYS"/>
                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false"
                  onAction="#sendMessage" prefHeight="84.0" prefWidth="45.0" text="Send"
                  HBox.hgrow="ALWAYS"/>
              </children>
            </HBox>
          </items>
        </SplitPane>
      </items>
    </SplitPane>
  </children>
</VBox>
